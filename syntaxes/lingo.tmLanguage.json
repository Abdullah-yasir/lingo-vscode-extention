{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "lingo",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#built-in-functions"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#brackets"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#function"
		},
		{
			"include": "#function-parameters"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.lingo",
					"match": "\\b(if|else|while)\\b"
				},
				{
					"name": "support.constant",
					"match": "\\b(fn|var|const)\\b"
				}
			]
		},

		"built-in-functions": {
			"patterns": [
				{
					"match": "\\b(print|length)\\b",
					"name": "entity.name.function.builtin"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.lingo",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"match": "[^\\$\"\\\\]+",
					"name": "string.quoted.double.lingo"
				}
			]
		},

		"numbers": {
			"patterns": [
				{
					"match": "\\b\\d+\\b",
					"name": "constant.numeric.lingo"
				},
				{
					"match": "\\b\\d+\\.\\d+\\b",
					"name": "constant.numeric.float.lingo"
				}
			]
		},
		"brackets": {
			"patterns": [
				{
					"name": "punctuation.definition.bracket.lingo",
					"match": "[()\\[\\]{};,]"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.lingo",
					"match": "\\+|-|\\*|/|%|< | >|<= | >= | == |!= | ="
				}
			]
		},
		"function": {
			"patterns": [
				{
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b(?=\\s*\\()",
					"name": "support.function"
				}
			]
		},
		"function-parameters": {
			"patterns": [
				{
					"match": "(?<=\\bfn\\s+[a-zA-Z_][a-zA-Z0-9_]*\\s*\\()([^)]*)(?=\\))",
					"name": "variable.parameter.function.lingo"
				}
			]
		}
	},
	"scopeName": "source.lingo"
}
