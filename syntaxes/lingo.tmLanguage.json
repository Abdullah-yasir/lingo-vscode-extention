{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "cowlang",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#built-in-functions"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#brackets"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#function"
		},
		{
			"include": "#function-parameters"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#identifiers"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"match": "#.*$",
					"name": "comment.line.cowlang"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.cowlang",
					"match": "\\b(if|else|while|and|or)\\b"
				},
				{
					"name": "support.constant",
					"match": "\\b(fn|var|const)\\b"
				}
			]
		},
		"identifiers": {
			"patterns": [
				{
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
					"name": "variable.other.identifier.cowlang"
				}
			]
		},
		"built-in-functions": {
			"patterns": [
				{
					"match": "\\b(print|length)\\b",
					"name": "entity.name.function.builtin"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.cowlang",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"match": "[^\\$\"\\\\]+",
					"name": "string.quoted.double.cowlang"
				}
			]
		},

		"numbers": {
			"patterns": [
				{
					"match": "\\b\\d+\\b",
					"name": "constant.numeric.cowlang"
				},
				{
					"match": "\\b\\d+\\.\\d+\\b",
					"name": "constant.numeric.float.cowlang"
				}
			]
		},
		"brackets": {
			"patterns": [
				{
					"name": "punctuation.definition.bracket.cowlang",
					"match": "[()\\[\\]{};,]"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.cowlang",
					"match": "\\+|-|\\*|/|%|< | >|<= | >= | == |!= | \\|\\| | && | ="
				}
			]
		},
		"function": {
			"patterns": [
				{
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b(?=\\s*\\()",
					"name": "support.function"
				}
			]
		},
		"function-parameters": {
			"patterns": [
				{
					"match": "(?<=\\bfn\\s+[a-zA-Z_][a-zA-Z0-9_]*\\s*\\()([^)]*)(?=\\))",
					"name": "variable.parameter.function.cowlang"
				}
			]
		}
	},
	"scopeName": "source.cowlang"
}
